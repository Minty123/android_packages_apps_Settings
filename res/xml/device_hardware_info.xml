<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Device RAM info -->
	<PreferenceCategory
		android:title="@string/device_ram_category">

	<Preference android:key="device_ram_info"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_ram_info"/>
	
	</PreferenceCategory>

	<!-- Device SoC info -->
	<PreferenceCategory
		android:title="@string/device_soc_category">
	
	<Preference android:key="device_soc_manufacturer"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_soc_manufacturer"/>

	<Preference android:key="device_soc_model"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_hw_model"/>
		
	</PreferenceCategory>
		    
	<!-- Device CPU info -->
	<PreferenceCategory
		android:title="@string/device_cpu_category">

	<Preference android:key="device_cpu_count"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_cpu_count"/>

	<Preference android:key="device_cpu_frequency"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_hw_frequency"/>

	</PreferenceCategory>

	<!-- Device GPU info -->
	<PreferenceCategory
		android:title="@string/device_gpu_category">

	<Preference android:key="device_gpu_model"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_hw_model"/>
		
	<Preference android:key="device_gpu_frequency"
		style="?android:preferenceInformationStyle"
		android:title="@string/device_hw_frequency"/>

	</PreferenceCategory>

</PreferenceScreen>
